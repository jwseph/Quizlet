import re


key1 = {

  '„ÅÇ': 'a',    '„ÅÑ': 'i',    '„ÅÜ': 'u',    '„Åà': 'e',    '„Åä': 'o',
  '„Åã': 'ka',   '„Åç': 'ki',   '„Åè': 'ku',   '„Åë': 'ke',   '„Åì': 'ko',
  '„Åå': 'ga',   '„Åé': 'gi',   '„Åê': 'gu',   '„Åí': 'ge',   '„Åî': 'go',
  '„Åï': 'sa',   '„Åó': 'shi',  '„Åô': 'su',   '„Åõ': 'se',   '„Åù': 'so',
  '„Åñ': 'za',   '„Åò': 'ji',   '„Åö': 'zu',   '„Åú': 'ze',   '„Åû': 'zo',
  '„Åü': 'ta',   '„Å°': 'chi',  '„Å§': 'tsu',  '„Å¶': 'te',   '„Å®': 'to',
  '„Å†': 'da',   '„Å¢': 'ji',   '„Å•': 'zu',   '„Åß': 'de',   '„Å©': 'do',
  '„Å™': 'na',   '„Å´': 'ni',   '„Å¨': 'nu',   '„Å≠': 'ne',   '„ÅÆ': 'no',
  '„ÅØ': 'ha',   '„Å≤': 'hi',   '„Åµ': 'fu',   '„Å∏': 'he',   '„Åª': 'ho',
  '„Å∞': 'ba',   '„Å≥': 'bi',   '„Å∂': 'bu',   '„Åπ': 'be',   '„Åº': 'bo',
  '„Å±': 'pa',   '„Å¥': 'pi',   '„Å∑': 'pu',   '„Å∫': 'pe',   '„ÅΩ': 'po',
  '„Åæ': 'ma',   '„Åø': 'mi',   '„ÇÄ': 'mu',   '„ÇÅ': 'me',   '„ÇÇ': 'mo',
  '„ÇÑ': 'ya',   '„ÄÄ': ' ',    '„ÇÜ': 'yu',   'õÄÅ': 'ye',   '„Çà': 'yo',
  '„Çâ': 'ra',   '„Çä': 'ri',   '„Çã': 'ru',   '„Çå': 're',   '„Çç': 'ro',
  '„Çè': 'wa',   '„Çê': 'wi',   '„Äú': '~',    '„Çë': 'we',   '„Çí': 'wo',
  '„Çì': 'n',    '„Çü': 'yoro', '„ÄÇ': '.',    'Ôºå': ',',     '„ÄÅ': ',',
  'ÔºÅ': '!',    'Ôºü': '?',    'Ôºö': ':',    'Ôºà': '(',    'Ôºâ': ')',

  '„ÇÉ': '\bya',               '„ÇÖ': '\byu',               '„Çá': '\byo'

}


def get_romaji(hiragana):

  return re.sub('(?:(?:(?<=sh)|(?<=j))i\by)|(?:i\b)', '', ''.join(key1.get(_, _) for _ in hiragana))


# „Åä„ÅØ„Çà„ÅÜ „Åî„Åñ„ÅÑ„Åæ„Åô

if __name__ == '__main__':

  while True: print(get_romaji(input()))
